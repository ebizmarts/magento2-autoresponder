<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Store:etc/config.xsd">
    <default>
        <autoresponder>
            <general>
            </general>
            <neworder>
                <subject>Thanks for your order</subject>
                <mandrill_tag>Autoresponder_NewOrder</mandrill_tag>
                <listname>New Order List</listname>
            </neworder>
            <birthday>
                <subject>Happy Birthday</subject>
                <mandrill_tag>Autoresponder_Birthday</mandrill_tag>
                <listname>Birthday List</listname>
            </birthday>
            <related>
                <subject>Please review your purchased products</subject>
                <mandrill_tag>Autoresponder_RelatedProducts</mandrill_tag>
                <listname>Related Products List</listname>
            </related>
        </autoresponder>
    </default>
</config>
